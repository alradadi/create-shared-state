{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2015",
		"lib": ["es6"],
		"jsx": "react-native",
		"declaration": true,
		"outDir": "dist",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": ["node_modules"]
}
